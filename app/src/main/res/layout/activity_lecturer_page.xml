<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.LecturerPage">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lecturer_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="148dp"
        android:layout_marginBottom="8dp"
        android:padding="60dp"
        card_view:contentPadding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="5dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintVertical_bias="0.043"
        tools:layout_editor_absoluteX="31dp">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container">

            <TextView
                android:id="@+id/id_head"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lecturer_id"
                android:layout_columnSpan="1"
                 />

            <TextView
                android:id="@+id/lecturer_id"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                />

            <TextView
                android:id="@+id/name_head"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lecturer_name"
                android:layout_columnSpan="1"
                />

            <TextView
                android:id="@+id/lecturer_name"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>